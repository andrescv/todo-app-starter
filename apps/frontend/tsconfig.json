{
  "extends": "@todo/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~public/*": ["public/*"],
      "~graphql/*": ["src/graphql/*"],
      "~layouts/*": ["src/layouts/*"],
      "~stores/*": ["src/stores/*"],
      "~utils/*": ["src/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
