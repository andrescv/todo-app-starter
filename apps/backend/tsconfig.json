{
  "extends": "@todo/tsconfig/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~common/*": ["src/common/*"],
      "~configs/*": ["src/configs/*"],
      "~modules/*": ["src/modules/*"],
      "~app": ["src/app.module"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
